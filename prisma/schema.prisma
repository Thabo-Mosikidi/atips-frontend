generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Actor {
  id        String   @id
  name      String
  bio       String
  imageUrl  String
  email     String
  number    Int      @default(0)
  tips      Tip[]
  createdAt DateTime @default(now())
}

model Tip {
  id              String   @id @default(uuid())
  stripeSessionId String   @unique
  actorId         String
  actor           Actor    @relation(fields: [actorId], references: [id])
  amount          Int
  createdAt       DateTime @default(now())
}
